<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane stylesheets="@HowToPlay.css" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"

            fx:controller="com.example.guessinggame.HowToPlayController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20.0" >
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label fx:id="label" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
        <Button text="Return To Main Menu" onAction="#returnMainMenu"/>
    </VBox>
</AnchorPane>


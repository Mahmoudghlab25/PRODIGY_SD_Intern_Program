<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<StackPane stylesheets="@Style.css" xmlns:fx="http://javafx.com/fxml"
           fx:id="content"
           fx:controller="com.example.guessinggame.GuessController">
    <VBox alignment="CENTER" spacing="20.0" >
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label fx:id="label" text="Welcome To Guess Number Game" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
        <Button id="animated-button" text="Start Game" onAction="#startGame"/>
        <Button id="animated-button" text="How To Play" onAction="#howToPlay"/>
    </VBox>
</StackPane>